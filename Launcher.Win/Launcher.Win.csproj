<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <AssemblyName>OpenTemple</AssemblyName>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <LangVersion>8</LangVersion>
        <ApplicationIcon>../Data/app.ico</ApplicationIcon>
        <RootNamespace>OpenTemple.Windows</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Core\Core.csproj" />
        <ProjectReference Include="..\DynamicScripting\DynamicScripting.csproj" />
        <ProjectReference Include="..\Scripts\Scripts.csproj" />
        <!-- Includes the data directory when publishing -->
        <Content Include="..\Data\**" Link="Data\%(RecursiveDir)%(FileName)%(Extension)" CopyToPublishDirectory="PreserveNewest" />
        <Content Update="..\Data\loading.qml">
          <Link>Data\loading.qml</Link>
          <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
        </Content>
        <Content Update="..\Data\mainmenu.qml">
          <Link>Data\mainmenu.qml</Link>
          <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
        </Content>
        <Content Update="..\Data\MainMenu_Title.png">
          <Link>Data\MainMenu_Title.png</Link>
          <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
        </Content>
        <Content Update="..\Data\.qmlproject">
          <Link>Data\.qmlproject</Link>
          <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
        </Content>
        <Content Update="..\Data\OpenTempleUi.qmlproject">
          <Link>Data\OpenTempleUi.qmlproject</Link>
          <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <None Include="..\Data\app.ico">
        <Link>Data\app.ico</Link>
      </None>
    </ItemGroup>

</Project>
