{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://templeplus.org/textStyles.json",
  "type": "array",
  "title": "Text Style definition file",
  "items": {
    "type": "object",
    "required": [
      "id"
    ],
    "properties": {
      "id": {
        "type": "string"
      },
      "inherit": {
        "type": "string"
      },
      "fontFamily": {
        "type": "string"
      },
      "pointSize": {
        "type": "number",
        "default": 12
      },
      "bold": {
        "type": "boolean",
        "default": false
      },
      "italic": {
        "type": "boolean",
        "default": false
      },
      "align": {
        "type": "string",
        "enum": [
          "left",
          "center",
          "right",
          "justified"
        ]
      },
      "paragraphAlign": {
        "type": "string",
        "enum": [
          "near",
          "far",
          "center"
        ]
      },
      "foreground": {
        "$ref": "baseTypes.json#/definitions/brush"
      },
      "uniformLineHeight": {
        "type": "boolean",
        "default": false
      },
      "lineHeight": {
        "type": "number"
      },
      "baseLine": {
        "type": "number"
      },
      "dropShadow": {
        "type": "boolean"
      },
      "dropShadowBrush": {
        "$ref": "baseTypes.json#/definitions/brush"
      }
    }
  }
}


