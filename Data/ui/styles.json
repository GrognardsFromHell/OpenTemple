{
  "$schema": "../schemas/styleFile.json",
  "styles": [
    {
      "id": "default",
      "fontFace": "Arial",
      "fontSize": 10,
      "color": "#ffffff"
    },
    {
      "id": "decorative-text",
      "inherit": "default",
      "fontFace": "OFL Sorts Mill Goudy",
      "fontSize": 12,
      "color": "#ffffff"
    },
    {
      "id": "default-button-text",
      "textAlignment": "center",
      "paragraphAlignment": "center"
    },
    {
      "id": "chargen-button-text",
      "fontFamily": "priory-12",
      "textAlignment": "center",
      "paragraphAlignment": "center",
      "dropShadowColor": "#000000",
      "color": "#ffffff",
      "legacyKerning": 1,
      "legacyTracking": 3
    },
    {
      "id": "dialog-title",
      "fontSize": 12,
      "textAlignment": "center",
      "paragraphAlignment": "center",
      "dropShadowColor": "#000000",
      "color": "#ffffff"
    },
    {
      "id": "movie-subtitles",
      "inherit": "default",
      "fontSize": 14,
      "textAlignment": "center",
      "dropShadowColor": "#000000",
      "backgroundColor": "#99111111"
    },
    {
      "id": "radialmenu-hotkey",
      "wordWrap": "nowrap"
    },
    {
      "id": "radialmenu-text",
      "wordWrap": "nowrap",
      "fontSize": 12,
      "color": "#ffffff"
    },
    {
      "id": "link",
      "color": "#01BEFD",
      "fontWeight": "bold"
    },
    {
      "id": "link:hover",
      "underline": true
    },
    {
      "id": "default-tooltip",
      "backgroundColor": "rgba(17, 17, 17, 204)",
      "dropShadowColor": "#000000",
      "color": "#ffffff",
      "borderColor": "#000000",
      "borderWidth": 1,
      "padding": 2
    },
    {
      "id": "action-bar-tooltip",
      "inherit": "default-tooltip",
      "color": "#99FF99"
    },
    {
      "id": "tab-large",
      "color": "#FFFFFF",
      "dropShadowColor": "#000000",
      "inherit": "decorative-text",
      "wordWrap": "nowrap"
    },
    {
      "id": "tab-small",
      "color": "#FFFFFF",
      "dropShadowColor": "#000000",
      "inherit": "default",
      "wordWrap": "nowrap"
    },
    {
      "$comment": "Used for ingame text bubbles shown on talking NPCs",
      "id": "ingame-text-bubble",
      "inherit": "decorative-text",
      "dropShadowColor": "#000000"
    },
    {
      "$comment": "Used for ingame notification text such as skill failures, etc.",
      "id": "ingame-floating-text",
      "inherit": "decorative-text",
      "dropShadowColor": "#000000",
      "textAlignment": "center"
    },
    {
      "$comment": "Used to set the color of floating text.",
      "id": "ingame-floating-text-white",
      "color": "#ffffff"
    },
    {
      "$comment": "Used to set the color of floating text.",
      "id": "ingame-floating-text-red",
      "color": "rgb(255, 0, 0)"
    },
    {
      "$comment": "Used to set the color of floating text.",
      "id": "ingame-floating-text-green",
      "color": "rgb(0, 255, 0)"
    },
    {
      "$comment": "Used to set the color of floating text.",
      "id": "ingame-floating-text-blue",
      "color": "rgb(64, 64, 255)"
    },
    {
      "$comment": "Used to set the color of floating text.",
      "id": "ingame-floating-text-yellow",
      "color": "rgb(255, 255, 0)"
    },
    {
      "$comment": "Used to set the color of floating text.",
      "id": "ingame-floating-text-lightblue",
      "color": "rgb(128, 226, 255)"
    },
    {
      "$comment": "Used to draw text at mouse cursor when spells are being dragged",
      "id": "dragged-spell-name",
      "fontWeight": "bold",
      "dropShadowColor": "#000000",
      "trimMode": "character",
      "trimmingSign": "ellipsis",
      "wordWrap": "nowrap"
    },
    {
      "$comment": "Added to the style above if the spell being dragged is of the specialized school",
      "id": "dragged-spell-name-specialized",
      "color": "#FFFF80"
    },
    {
      "$comment": "Used for text placed on the mouse cursor when picking spell or other targets",
      "id": "picker-tooltip",
      "inherit": "default",
      "wordWrap": "nowrap"
    },
    {
      "$comment": "Used to render target numbers on targets that are already selected for a multi-target picker",
      "id": "picker-target-label",
      "inherit": "default",
      "wordWrap": "nowrap",
      "fontSize": 24,
      "fontWeight": "bold",
      "textAlignment": "center"
    }
  ]
}