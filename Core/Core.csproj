    <ItemGroup>
        <None Remove="DebugUI\Roboto-Medium.ttf" />
        <Content Include="DebugUI\Roboto-Medium.ttf">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <None Remove="Utils\elfhashes.json" />
