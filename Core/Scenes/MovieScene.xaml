<widgets:Canvas xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:widgets="clr-namespace:OpenTemple.Widgets;assembly=OpenTemple.Widgets"
                mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                x:Class="OpenTemple.Core.Scenes.MoviePlayerScene">
  <Control.Styles>
    <Style Selector="widgets|TextBlock.subtitle">
      <Setter Property="MaxWidth" Value="700" />
      <Setter Property="MaxHeight" Value="150" />
      <Setter Property="TextWrapping" Value="Wrap" />
      <Setter Property="TextAlignment" Value="Center" />
      <Setter Property="DropShadowBrush" Value="Black" />
      <Setter Property="FontSize" Value="12" />
    </Style>
  </Control.Styles>
</widgets:Canvas>
