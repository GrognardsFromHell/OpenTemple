<widgets:Canvas xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:widgets="clr-namespace:OpenTemple.Widgets;assembly=OpenTemple.Widgets"
                mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                x:Class="OpenTemple.Core.Scenes.LoadingScene">

  <StackPanel Orientation="Vertical"
              Spacing="20"
              Canvas.Left="0"
              Canvas.Right="0"
              Canvas.Top="0"
              Canvas.Bottom="0"
              VerticalAlignment="Center"
              >

    <Image Source="{Binding Image}"
           Width="800"
           Height="600" />

    <StackPanel Orientation="Vertical" Spacing="5" Width="512">
      <ProgressBar Minimum="0"
                   Maximum="1"
                   Value="{Binding Progress}"
                   Height="18" />
      <TextBlock Text="{widgets:T {Binding StatusText}}" />
    </StackPanel>

  </StackPanel>

</widgets:Canvas>
